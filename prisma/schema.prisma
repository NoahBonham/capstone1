generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Ensure your PostgreSQL database is set up correctly
  url      = env("DATABASE_URL")
}

model User {
  id       String      @id @default(uuid()) @db.Uuid 
  name     String?     // Optional name
  email    String      @unique // Unique email
  username String      @unique // Unique username
  password String      // Password field
  reviews  Review[]    // Relation to reviews
  stocks   Stock[]     // Relation to stocks
}

model Stock {
  id     Int    @id @default(autoincrement()) // Auto-incrementing ID
  userId String @db.Uuid // Foreign key to User ID
  tikr   String // Stock ticker symbol
  user   User   @relation(fields: [userId], references: [id]) // Relation to User
}

model Review {
  id       Int       @id @default(autoincrement()) // Auto-incrementing ID
  content  String    // Review content
  userId   String    @db.Uuid // Foreign key to User ID
  comments Comment[] // Relation to comments
  user     User      @relation(fields: [userId], references: [id]) // Relation to User
}

model Comment {
  id       Int    @id @default(autoincrement()) // Auto-incrementing ID
  content  String // Comment content
  reviewId Int    // Foreign key to Review ID
  review   Review @relation(fields: [reviewId], references: [id])
}